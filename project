import tkinter as tk
import getdotaz_new


# Create a new window
window = tk.Tk()

# Set the window size to 800x400 pixels
window.geometry("1920x1080")

# Create a label widget with the text "Hello, World!"
label = tk.Label(window, text="Hello, World!", font=("Arial", 24))

# Pack the label widget into the window
label.pack(expand=True, fill=tk.BOTH)

# Create a frame to hold the buttons
button_frame = tk.Frame(window)

text_size = 10

id_otazky=0

xvalue=0
yvalue=0

#ke smazání případně
"""
def getdata():
    v_id = getdotaz_new.data_list[id_otazky][0]
    v_dotaz = getdotaz_new.data_list[id_otazky][1]
    v_osa = data_list[id_otazky][2]
    v_hodnota = data_list[id_otazky][3]   
    id_otazky += 1
    return v_dotaz
"""    

smer = " "

def setvalue(id_otazky):
    global xvalue
    global yvalue
    smer = getdotaz_new.getdotazf(id_otazky,2)
    if smer=="X":
        xvalue+=getdotaz_new.getdotazf(id_otazky,3)
    elif smer=="Y":    
        yvalue+=getdotaz_new.getdotazf(id_otazky,3)
    id_otazky += 1
    print(xvalue,id_otazky)


# Create the buttons and pack them into the frame
button_1 = tk.Button(button_frame, text="Určitě souhlasím", font=("Arial", text_size), height=2, width=25, command=setvalue(id_otazky))
button_2 = tk.Button(button_frame, text="Spíše souhlasím", font=("Arial", text_size), height=2, width=25)
button_3 = tk.Button(button_frame, text="Nevím / nedokážu odpovědět", font=("Arial", text_size), height=2, width=25)
button_4 = tk.Button(button_frame, text="Spíše nesouhlasím", font=("Arial", text_size), height=2, width=25)
button_5 = tk.Button(button_frame, text="Určitě nesouhlasím", font=("Arial", text_size), height=2, width=25)

button_1.pack(side="left", padx=5, pady=5)
button_2.pack(side="left", padx=5, pady=5)
button_3.pack(side="left", padx=5, pady=5)
button_4.pack(side="left", padx=5, pady=5)
button_5.pack(side="left", padx=5, pady=5)

# Create a label widget with the text "Options"
options_label = tk.Label(window, text=getdotaz_new.getdotazf(id_otazky,1), font=("Arial", 18))

# Pack the options label and button frame into the window
options_label.pack(pady=10)
button_frame.pack(expand=True)

# Start the tkinter event loop
window.mainloop()
